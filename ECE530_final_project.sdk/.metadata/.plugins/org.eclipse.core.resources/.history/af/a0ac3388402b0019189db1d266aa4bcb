#include <stdio.h>
#include "platform.h"
#include "xil_io.h"
#include "xil_printf.h"
#include "xparameters.h"
#include "init_bram.h"
//#define ImgH 30
//#define ImgW 25
#define ramWidth 32
#define IMG_SIZE ImgH*ImgW
//#define MSB_MASK 1000000000000000000000000
#define MSB_MASK 0x1000000
u32    buf[32768]; //Maximum 32K

void open_img() {

    int    x,y;
    u32 mask=0;

    for(y =0; y<ramWidth; y++) {
      for(x=0;x<ramWidth; x++) {
        //xil_printf("buf[i]: ", buf[i]);
        if((0==buf[y*ImgW+x]) |((ImgH<=y) && (ImgW<=x))) mask = 0;
        else mask = MSB_MASK;
        Xil_Out32(XPAR_BRAM_0_BASEADDR + 4*(y*ImgW+x), (mask|buf[y*ImgW+x])); //33554431=0x1FFFFFF;
      }
    }
}

int main()
{
  xil_printf("Hello World\n\r");
  init_platform();
  init_bram(buf);
  open_img();
  cleanup_platform();
  return 0;
}
